<div class="hero-landing clearfix">
  <%= image_tag('contact-hero.jpg', alt: 'hero image') %>
  <div class="hero-header">
    <h1>About Merlot's Art</h1>
  </div>
</div>

<section class="contact-info">
  <div>
    <% if flash[:notice] -%>
      <p class='notice'><%=h flash[:notice] %></p>
    <% end -%>
  </div>
  <div class="studio-info col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <p>Our U Street Studio is located at: </p>
    <p>
      <span>1512 U Street NW</span>
      <span>Washington, DC 20009</span>
    </p>
    <p>
      If you need to reschedule a class or contact customer service, please submit a request below. Be sure to include your phone number and available times, if you would like for us to call you.
    </p>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <%= image_tag('map.jpg', alt: 'map') %>
  </div>
  <div class="clearfix">
  </div>
</section>

<section class="contact-form clearfix">
  <%= form_tag contacts_path do %>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= label_tag :name, 'Name', class: 'required' %>
      <%= text_field_tag(:name, nil, class: 'form-control', required: true) %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= label_tag :email, 'Email Address', class: 'required' %>
      <%= text_field_tag(:email, nil, class: 'form-control', required: true) %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= label_tag :phone, 'Phone'%>
      <%= text_field_tag(:phone, nil, class: 'form-control') %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= label_tag :time, 'Best time to call' %>
      <%= text_field_tag(:time, nil, class: 'form-control') %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= label_tag :message, 'Message', class: 'required' %>
      <%= text_area_tag(:message, nil, class: 'form-control', required: true) %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= submit_tag("Submit", class: 'btn-experiences') %>
    </div>
  <% end %>
</section>
