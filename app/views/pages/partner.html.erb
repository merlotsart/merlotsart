<div class="hero-landing clearfix">
  <%= image_tag('experiences-hero.jpg', alt: 'hero image') %>
  <div class="hero-header">
    <h1>Partner with Us</h1>
  </div>
</div>

<section class="contact-info">
  <div>
    <% if flash[:notice] -%>
      <p class='notice'><%=h flash[:notice] %></p>
    <% end -%>
  </div>
  <h4>
    ARTISTS, CRAFTERS, EVENT PLANNERS: Merlot’s Art is always looking for creative crafters, outgoing artists, and event planners to join our team of fun and creative individuals.
  </h4>
  <h4>
    VENUE PARTNERS: We love hosting events at new places.  If you would like to host a Merlot’s Art event at your venue, please submit a partnership request.
  </h4>
</section>

<section class="contact-form clearfix">
  <%= form_tag contacts_partner_path do %>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= label_tag :name, 'Name', class: 'required' %>
      <%= text_field_tag(:name, nil, class: 'form-control', required: true) %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= label_tag :email, 'Email Address', class: 'required' %>
      <%= email_field_tag(:email, nil, class: 'form-control', required: true) %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= label_tag :phone, 'Phone' %>
      <%= phone_field_tag(:phone, nil, class: 'form-control') %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= label_tag :company, 'Company/Venue'%>
      <%= text_field_tag(:company, nil, class: 'form-control') %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= label_tag :message, 'Message', class: 'required' %>
      <%= text_area_tag(:message, nil, class: 'form-control', required: true) %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= submit_tag("Submit", class: 'btn-experiences') %>
    </div>
  <% end %>
</section>
