<h1 class="orders-h1">Order Summary</h1>
<section class="order-summary">
  <h2>
    Success!  <%= @order.name.capitalize %>, thank you for your purchase.  An email will be sent shortly with your order confirmation.
  </h2>
  <table class="table">
    <tr>
      <td>Buyer Name</td>
      <td><%= @order.name %></td>
    </tr>
    <tr>
      <td>Buyer Phone</td>
      <td><%= @order.phone %></td>
    </tr>
    <tr>
      <td>Buyer Email</td>
      <td><%= @order.email %></td>
    </tr>
    <tr>
      <td>Total</td>
      <td>$<%= @order.total %></td>
    </tr>
    <% @attendees.each do |attendee| %>
      <tr>
        <td>Attendee Name</td>
        <td><%= attendee.name %></td>
      </tr>
      <tr>
        <td>Attendee Phone</td>
        <td><%= attendee.phone %></td>
      </tr>
      <tr>
        <td>Attendee Email</td>
        <td><%= attendee.email %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to('Return to class page', experiences_path(month: Date.today.month)) %>
</section>
